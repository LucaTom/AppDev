<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/chxDone"
        android:layout_width="57dp"
        android:layout_height="51dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="73dp" />

    // DueDay Array:
    // https://stackoverflow.com/questions/4029261/populating-spinner-directly-in-the-layout-xml

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="92dp"
        android:layout_height="47dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/chxDone"
        tools:layout_editor_absoluteY="73dp" />

    <Spinner
        android:id="@+id/newDue"
        android:layout_width="121dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:entries="@array/DueDay" />

    <TextView
        android:id="@+id/txtDue"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:text="Day" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="98dp"
        android:layout_height="62dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_edit" />


    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="97dp"
        android:layout_height="62dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_delete" />

</LinearLayout>