<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/chxDone"
        android:layout_width="57dp"
        android:layout_height="51dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/chxDone"
        tools:layout_editor_absoluteY="73dp" />

    // DueDay Array:
    // https://stackoverflow.com/questions/4029261/populating-spinner-directly-in-the-layout-xml

    <Spinner
        android:id="@+id/spDue"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:entries="@array/DueDay"
        app:layout_constraintStart_toEndOf="@+id/txtDescription"
        tools:layout_editor_absoluteY="73dp" />

</LinearLayout>